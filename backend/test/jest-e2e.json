{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFiles": ["<rootDir>/setup-test-env.ts"],
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/main.ts",
    "!../src/**/*.module.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.dto.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "testTimeout": 30000,
  "maxWorkers": 1,
  "verbose": true,
  "bail": false
}